<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProductController">
    <children>
        <Label layoutX="26.0" layoutY="24.0" text="Product Management">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TextField fx:id="txtId" layoutX="26.0" layoutY="80.0" promptText="Product ID (e.g. P001)" />
        <TextField fx:id="txtName" layoutX="190.0" layoutY="80.0" promptText="Product Name" />
        <TextField fx:id="txtPrice" layoutX="353.0" layoutY="80.0" prefWidth="100.0" promptText="Price" />
        <TextField fx:id="txtStock" layoutX="466.0" layoutY="80.0" prefWidth="100.0" promptText="Stock Qty" />

        <Button layoutX="580.0" layoutY="80.0" onAction="#btnAddOnAction" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add" />
        <Button layoutX="630.0" layoutY="80.0" onAction="#btnUpdateOnAction" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Update" />
        <Button layoutX="690.0" layoutY="80.0" onAction="#btnDeleteOnAction" style="-fx-background-color: #c0392b; -fx-text-fill: white;" text="Delete" />

        <TableView fx:id="tblProducts" layoutX="26.0" layoutY="130.0" prefHeight="340.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="250.0" text="Name" />
                <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price" />
                <TableColumn fx:id="colStock" prefWidth="100.0" text="Stock" />
            </columns>
        </TableView>

        <Button layoutX="660.0" layoutY="29.0" onAction="#btnBackOnAction" text="Back to Home" />
    </children>
</AnchorPane>