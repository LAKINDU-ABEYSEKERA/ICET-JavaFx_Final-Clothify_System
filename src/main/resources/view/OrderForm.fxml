<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderController">
    <children>
        <Label layoutX="24.0" layoutY="21.0" text="Place Order (POS)">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Button layoutX="780.0" layoutY="26.0" onAction="#btnBackOnAction" text="Back to Home" />

        <Label layoutX="24.0" layoutY="70.0" text="Select Product:" />
        <TableView fx:id="tblProducts" layoutX="24.0" layoutY="95.0" prefHeight="480.0" prefWidth="380.0">
            <columns>
                <TableColumn fx:id="colProdId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colProdName" prefWidth="130.0" text="Name" />
                <TableColumn fx:id="colProdPrice" prefWidth="90.0" text="Price" />
                <TableColumn fx:id="colProdStock" prefWidth="75.0" text="Stock" />
            </columns>
        </TableView>

        <Label layoutX="425.0" layoutY="150.0" text="Quantity:" />
        <TextField fx:id="txtQty" layoutX="425.0" layoutY="175.0" prefWidth="80.0" text="1" />
        <Button layoutX="425.0" layoutY="220.0" onAction="#btnAddToCartOnAction" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Add &gt;&gt;" />

        <Label layoutX="530.0" layoutY="70.0" text="Cart / Invoice Items:" />
        <TableView fx:id="tblCart" layoutX="530.0" layoutY="95.0" prefHeight="380.0" prefWidth="350.0">
            <columns>
                <TableColumn fx:id="colCartProdId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colCartName" prefWidth="120.0" text="Name" />
                <TableColumn fx:id="colCartQty" prefWidth="60.0" text="Qty" />
                <TableColumn fx:id="colCartTotal" prefWidth="90.0" text="Total" />
            </columns>
        </TableView>

        <Label layoutX="530.0" layoutY="490.0" text="Net Total:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="lblNetTotal" layoutX="630.0" layoutY="490.0" text="0.00" textFill="#e74c3c">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Button layoutX="530.0" layoutY="540.0" onAction="#btnPlaceOrderOnAction" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16;" text="PLACE ORDER &amp; PRINT" />
    </children>
</AnchorPane>