<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Clothify Dashboard">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Button fx:id="btnProducts" layoutX="67.0" layoutY="100.0" mnemonicParsing="false" onAction="#btnProductsOnAction" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16;" text="Manage Products" />

        <Button fx:id="btnOrder" layoutX="333.0" layoutY="100.0" mnemonicParsing="false" onAction="#btnOrderOnAction" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16;" text="Place Order (POS)" />
    </children>
</AnchorPane>